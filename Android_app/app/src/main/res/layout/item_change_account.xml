<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lyt_parent_activity_select_account"
    android:layout_width="260dp"
    android:layout_height="300dp"
    android:layout_margin="2dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_stationary"
        android:scaleType="centerCrop"/>

    <View
        android:id="@+id/tint_activity_select_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_color_red"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="120dp"
        android:orientation="vertical"
        android:paddingTop="@dimen/spacing_xlarge"
        android:paddingBottom="@dimen/spacing_xlarge"
        android:paddingRight="@dimen/spacing_mlarge"
        android:paddingLeft="@dimen/spacing_mlarge">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/shape_circle"
                android:backgroundTint="@color/mdtp_white"
                android:tint="@color/grey_40" />

            <TextView
                android:id="@+id/symbol_activity_select_account"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="M"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_centerInParent="true"
                android:textColor="@color/quantum_black_100"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_large"/>

        <TextView
            android:id="@+id/name_activity_select_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mohammad Ali"
            android:maxLines="2"
            android:inputType="textMultiLine"
            android:textColor="@color/mdtp_white"
            android:fontFamily="serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <TextView
            android:id="@+id/section_activity_select_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1st Standard (Section A)"
            android:textColor="@color/mdtp_white"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:id="@+id/school_activity_select_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The City School"
            android:textColor="@color/mdtp_white"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    </LinearLayout>

</android.support.v7.widget.CardView>