<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/spacing_xmedium"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/material_bg_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/btn_rounded_amber"
            android:backgroundTint="@color/blue_600"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="@dimen/spacing_large">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="Menu"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/quantum_white_100" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_medium"
            android:layout_gravity="center"
            android:weightSum="5"
            android:orientation="vertical">

            <Button
                android:id="@+id/goto_adminpanel"
                style="@style/Button.Primary.Borderless"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ADMIN DASHBOARD"
                android:textSize="10sp"
                android:background="@drawable/btn_rounded_indigo_outline"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/goto_campusreport"
                style="@style/Button.Primary.Borderless"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="CAMPUS REPORT"
                android:textSize="10sp"
                android:background="@drawable/btn_rounded_indigo_outline"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/goto_attendance"
                style="@style/Button.Primary.Borderless"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ATTENDANCE"
                android:textSize="10sp"
                android:background="@drawable/btn_rounded_indigo_outline"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/goto_marks"
                style="@style/Button.Primary.Borderless"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="STUDENT MARKS"
                android:textSize="10sp"
                android:background="@drawable/btn_rounded_indigo_outline"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/goto_parentportal"
                style="@style/Button.Primary.Borderless"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_rounded_indigo_outline"
                android:gravity="center"
                android:text="PARENTS PORTAL"
                android:textColor="@color/colorAccent"
                android:textSize="10sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
