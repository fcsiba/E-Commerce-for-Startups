<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/img_plant_11">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/goto_adminpanel"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:background="#60000000"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_admindashboard"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Dashboard"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white_transparency"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/goto_campusreport"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:background="#60000000"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_reports"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reports"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white_transparency"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/goto_attendance"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:background="#60000000"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_attendance"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white_transparency"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/goto_marks"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:background="#60000000"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_marks"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marks"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white_transparency"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/goto_parentportal"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:gravity="center"
                android:layout_marginRight="1dp"
                android:background="#60000000"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_parents"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parents Portal"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white_transparency"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:background="#60000000"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_homework"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Work"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white_transparency"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:background="#60000000"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMS"
                android:fontFamily="serif"
                android:textSize="50sp"
                android:textColor="@color/white_transparency"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~ Menu ~"
                android:textColor="@color/white_transparency"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>