<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white_transparency"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_large"
    android:paddingTop="@dimen/spacing_xmlarge"
    android:paddingRight="@dimen/spacing_large"
    android:paddingBottom="@dimen/spacing_xmlarge">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/badge_verified"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_large"/>

    <TextView
        android:id="@+id/recipient_name_to_authenticate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="@string/authenticate_all"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/spacing_large"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_verify_all"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_red"
        android:backgroundTint="@color/blue_600"
        android:text="@string/YES"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_deny_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bg_outline_custom"
        android:text="@string/NO"
        android:textStyle="bold"
        android:textColor="@color/blue_600" />

</LinearLayout>