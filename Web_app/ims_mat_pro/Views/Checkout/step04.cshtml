
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags always come first -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title> Saal Apparels - Order Confirmed</title>
    <link rel="icon" type="image/png" href="../assetsCheckout/images/favicon.png" />

    <!--Core CSS -->
    <link rel="stylesheet" href="../assetsCheckout/css/bulma.css">
    <link rel="stylesheet" href="../assetsCheckout/css/core.css">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Alegreya+Sans+SC:100,400" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,500" rel="stylesheet">

    <!-- plugins -->
    <link rel="stylesheet" href="../assetsCheckout/js/slick/slick.css">
    <link rel="stylesheet" href="../assetsCheckout/js/slick/slick-theme.css">
    <link rel="stylesheet" href="../assetsCheckout/js/webuipopover/jquery.webui-popover.min.css">
    <link rel="stylesheet" href="../assetsCheckout/js/izitoast/css/iziToast.min.css">
    <link rel="stylesheet" href="../assetsCheckout/js/zoom/zoom.css">
    <link rel="stylesheet" href="../assetsCheckout/js/jpcard/card.css">
    <link rel="stylesheet" href="../assetsCheckout/css/chosen/chosen.css">
    <link rel="stylesheet" href="../assetsCheckout/css/icons.min.css">

</head>
<body>

    <!-- Pageloader -->
    <div class="pageloader"></div>
    <div class="infraloader is-active"></div>

  
    
    <!-- Action Bar -->
    <div class="action-bar is-centered" style="width:100%">
        <div class="steps-wrapper">
            <ol class="step-list">
                <li class="active"></li>
                <li class="active"></li>
                <li class="active"></li>
                <li class="active"></li>
            </ol>
        </div>
    </div>


    <!-- Main wrapper -->
    <div class="shop-wrapper">

        <!-- Search overlay -->
        <div class="search-overlay"></div>

        <!-- Main section -->
        <div class="section">
            <!-- Container -->
            <div class="container">

                <!-- Checkout step 5 -->
                <div class="columns account-header">
                    <div class="column is-8 is-offset-2 checkout-wrapper has-text-centered is-invoice-landscape-padded">
                        <!-- Title -->
                        <div class="checkout-title is-centered">
                            <h2>CHECKOUT COMPLETE</h2>
                            <img class="brand-filigrane is-centered" src="../assetsCheckout/images/logo/nephos-greyscale.svg" alt="">
                        </div>
                        <!-- Card -->
                        <div class="flat-card is-auto thanks-card">
                            <img src="../assetsCheckout/images/icons/order.svg" alt="">
                            <div class="card-heading">Order Placed !</div>
                            <p>You are done ordering your products. We are very happy to count you amongst our customers. Use our tracking tools to manage your order</p>
                            <div class="button-wrap">
                                <a href="/Checkout/track" class="button feather-button secondary-button is-bold raised rounded">Track Order</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /Container -->
        </div>
        <!-- /Main section -->
    </div>
    <!-- /Main wrapper -->
    <!-- Concatenated plugins -->
    <script src="../assetsCheckout/js/app.js"></script>
    <!-- Helios js -->
    <script src="../assetsCheckout/js/nephos.js"></script>
</body>

</html>
