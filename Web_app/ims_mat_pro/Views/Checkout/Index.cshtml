        <script>
            $(document).ready(function () {

                type = '@Session["uType"]';
                if (type === "") {
                    window.location = '../Login';
                }

                //Populate
                $.ajax({
                    type: "POST",
                    url: '/Checkout/GetUserInfo',
                    contentType: "application/json",
                    traditional: true,
                    dataType: "json",
                    success: function (recData) {
                        if (recData.status == "success") {
                            //$('#txtFirstName').val(recData.Data.firstName);
                            //$('#txtLastName').val(recData.Data.lastName);
                            //$('#txtMob').val(recData.Data.mobile);
                        }

                    },
                    error: function () { }
                });

                var _fName = '@ViewBag.fName';
                var _mob = '@ViewBag.mob';
                var _address = '@ViewBag.address';
                var _city = '@ViewBag.city';
                var _country = '@ViewBag.country';
                var _bill = '@ViewBag.bill';
                var _dc = '@ViewBag.dc';
                $('#txtFirstName').val(_fName);
                $('#txtAddress').val(_address);
                $('#txtMob').val(_mob);
                $('#txtCity').val(_city);
                $("#txtCountry").val(_country);
                $("#txtBill").val(_bill);
                $("#txtDC").val(_dc);


            });


            function Next() {

                var fName = $('#txtFirstName').val();
                var lName = $('#txtLastName').val();
                var address = $('#txtAddress').val();
                var mob = $('#txtMob').val();
                var city =  $('#txtCity').val();
                var country = $("#txtCountry").val();
                var bill = $("#txtBill").val();
                var dc = $("#txtDC").val();

                if (fName.length === 0) {
                    swal({

                        title: "Opps!",
                        text: "Please enter customer name",
                        icon: "error",
                    });
                }
                else if (mob.length === 0) {
                    swal({

                        title: "Opps!",
                        text: "Please enter customer's mobile number.",
                        icon: "error",
                    });
                }
                else if (address.length === 0) {
                    swal({

                        title: "Opps!",
                        text: "Please enter customer's address",
                        icon: "error",
                    });
                }
                else if (bill.length === 0) {
                    swal({

                        title: "Opps!",
                        text: "Please enter total bill amount.",
                        icon: "error",
                    });
                }
                else if (dc.length === 0) {
                    swal({

                        title: "Opps!",
                        text: "Please enter delivery charges.",
                        icon: "error",
                    });
                }
                else if (city.length === 0) {
                    swal({

                        title: "Opps!",
                        text: "Please enter city name.",
                        icon: "error",
                    });
                }
                else if (country.length === 0) {
                    swal({

                        title: "Opps!",
                        text: "Please enter country name.",
                        icon: "error",
                    });
                }
                else {
                    window.location = '../Checkout/step02?fName=' + fName + '&lName=' + lName + '&address=' + address + '&mob=' + mob + '&city=' + city + '&country=' + country + '&bill=' + bill + '&dc=' + dc;
                }





            }


        </script>


