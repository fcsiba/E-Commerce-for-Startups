    $('#btnUpdateissue').click(function () {
       // window.location = "/subInventoryView/index";

    });
    //start manipulation

    $('#btnAddIssue').click(function (e) {
        editID = 0;
        $('.modal-title').text('Issue Stock');
        $('#btnUpdateStock').text('Issue Stock');

        //$('#cmbCat').val('');
