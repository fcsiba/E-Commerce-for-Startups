            url: '/issues/updateSession',
            contentType: "application/json",
            traditional: true,
            data: JSON.stringify({ id:_issueId}),
            dataType: "json",
            success: function (recData) {
                if (recData.Data !=0) {       
                    console.log(_issueId);                    
                    window.location = '../subInventoryView/index/';
                }
                else {
                    swal({
                        title: "please provide valid!",
                        text: recData.Data,
